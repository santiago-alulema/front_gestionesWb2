{
  "compilerOptions": {
    "target": "es2022",                     // Compatibilidad con features modernas
    "module": "esnext",                     // Compatible con Vite / ES Modules
    "moduleResolution": "node16",           // Soluciona errores de react-router-dom
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"], // Incluye APIs modernas y DOM
    "allowJs": true,
    "noImplicitAny": false,                 // Puedes ajustar según necesidad
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,                   // Ignora errores de tipos de librerías externas
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "types": ["react", "react-dom"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*"]
}
